<div id="k-body" class="k-body adminDesk">
  <div class="container">
<div>
  <h1>Exams</h1>
</div>
<%= link_to 'New Exam', new_exam_path, class: 'btn btn-primary' %>
<div class="textLeft">
  <h2 class="left">Filter By</h2>
  <%= select_tag :filter_exam_class, options_from_collection_for_select(@jkci_classes, "id", "class_name"), prompt: "Select class", style:"margin:15px 20px;", class: "filter_exam_class", onchange: "examFilterByClass(event, this)" %>
  <%= select_tag :filter_exam_type,  options_for_select([ "Subjective", "Objective" ]), prompt: "Select type", style:"margin:15px 20px;", onchange: "examFilterByClass(event, this)"  %>
  <%= select_tag :filter_exam_status,  options_for_select([ "Created", "Conducted", "Published"]), prompt: "Select type", style:"margin:15px 20px;", onchange: "examFilterByClass(event, this)"  %>
</div>
<div>
  <table class="table table-hover examsTable">
    <thead>
      <tr>
	<th>#</th>
	<th>Name</th>
	<th>Conducted By</th>
	<th>Marks</th>
	<th>Date</th>
	<th>Type</th>
	<th>Class</th>
	<th>Actions</th>
      </tr>
    </thead>
    <%= render partial: 'exam', locals: {exams: @exams}%>
  </table>
  <%= will_paginate @exams %>
</div>

</div>
</div>
