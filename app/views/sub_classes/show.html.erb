<div id="k-body" class="k-body adminDesk">
  <div class="container">
    <div class="col-sm-12 textLeft">
      <h2>Sub Class For <%= @jkci_class.class_name %></h2>
      <div class="studentShow">
	<p>&nbsp;</p>
	<div class="col-sm-12">
	  <h5>
	    <small class="col-sm-6">Name :</small> 
	    <span class="col-sm-6" style="font-size:20px;"><%= @sub_class.name %></span>
	  </h5>
	</div>
      </div>
      <div class="col-sm-12">
	<%# link_to "Edit", edit_subject_path(@subject), class: "btn btn-primary" %>
	<%=  link_to "Back", jkci_class_path(@jkci_class), class: "btn btn-default" %>
	<%= link_to 'Assign Students', '#', onclick: "modalOpen('Student Box', '/jkci_classes/#{@jkci_class.id}/sub_class/#{@sub_class.id}/get_students', '#{@jkci_class.id}', '#{@sub_class.id}');", class: 'btn btn-primary' %>
      </div>
    </div>
    

    <div class="col-sm-12 textLeft">
      <h2>Students</h2>
      <div>
	<table class="table table-hover studentsTable">
	  <thead>
	    <tr>
	      <th>#</th>
	      <th>Name</th>
	      <th>Gender</th>
	      <th>Group</th>
	      <th>Mobile</th>
	      <th>Parent Mobile</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <%= render partial: 'students', locals: {students: @students}%>
	</table>
      </div>
    </div>
  </div>
</div>


