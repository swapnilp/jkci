<div class="col-sm-12">
  
  <div class="textLeft">
    <span style="font-size:22px;font-weight:bold;">Points   - </span>
    <span>
      <%= @daily_teaching_point.points %>
    </span>
  </div>
  <div class="textLeft">
    <h3>Class: <a href="<%= jkci_class_path(@daily_teaching_point.jkci_class) %>"><%= @daily_teaching_point.jkci_class.try(:class_name)%></a></h3>
  </div>
  <div class="textLeft">
    <h4>Teacher: <%= @daily_teaching_point.teacher.try(:name) %></h4>
    <h5>Date: &nbsp;
      <span style="font-size:14px;" class="dailyTeachDate">  
	<%= @daily_teaching_point.date.to_date %>
      </span>
    </h5>
  </div>
  <div class="textLeft" style="margin-top:20px;">
    <%= link_to "Edit", edit_daily_teach_path(@daily_teaching_point),  class: "btn btn-primary" %>
    <%= link_to "Back", jkci_class_path(@daily_teaching_point.jkci_class),  class: "btn btn-primary" %>
  </div>
  <div class="textLeft classCatlog" data-date="<%= @daily_teaching_point.date.to_date %>" data-id="<%= @daily_teaching_point.id %>">
    <%= render partial: "student_catlog" %>
    <%= form_tag("/daily_teach/#{@daily_teaching_point.id}/fill_catlog", method: "post", class: "fillCatlogForm") do %>
      <input name="students_list" type="hidden" value="" class="dtpStudents">
      <input name="date" type="hidden" value="" class="dtpDate">
      <div style="margin-top:20px;">
	<%= link_to "Edit", "#", onclick: "editDailyCatlog(event, this);", class:"btn btn-primary editDailyCatlog" %>
	<%= link_to "Save", "#", onclick: "saveDailyCatlog(event, this);", class:"btn btn-primary hide saveDailyCatlog" %>
      </div>
    <%- end %>
  </div>
  <div class="textLeft">
    <%- if @exams.present? %>
      <h2>Exams</h2>
      <%- @exams.each_with_index do |exam, index| %>
        <div>
	  <%= index + 1 %> : <%= link_to exam.name, exam_path(exam) %>
        </div>
      <%- end %>
    <%- end %>
  </div>
</div>
