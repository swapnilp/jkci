<div id="k-body" class="k-body adminDesk">
  <div class="container">
    <div class="loginContainer">
      <div class="pull-left col-lg-4 col-md-4">
	<h2 style="color:#fff;">Login Tips</h2>
      </div>
      <div class="pull-right col-lg-4 col-md-4">
	<h2 style="color:#fff;">Log in</h2>
	
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="field">
	  <%= f.label 'Organisation Id' %><br />
	  <%= f.text_field :organisation_id, autofocus: true %>
	</div>
	
	<div class="field">
	  <%= f.label :login %><br />
	  <%= f.text_field :login, autofocus: false %>
	</div>

	<div class="field">
	  <%= f.label :password %><br />
	  <%= f.password_field :password, autocomplete: "off" %>
	</div>

	<% if devise_mapping.rememberable? -%>
	<div class="field">
	  <%= f.check_box :remember_me %>
	  <%= f.label :remember_me %>
	</div>
	<% end -%>

	<div class="actions">
	  <%= f.submit "Log in" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
