<div id="k-body" class="k-body adminDesk">
  <div class="container">
<div>
  <h1>Students</h1>
</div>
<%= link_to 'New Student', new_student_path, class: 'btn btn-primary' %>
<div>
  <table class="table table-hover">
    <thead>
      <tr>
	<th>#</th>
	<th>Name</th>
	<th>Class</th>
	<th>Group</th>
	<th>Mobile</th>
	<th>Parent Mobile</th>
	<th>Actions</th>
      </tr>
    </thead>
    <%- @students.each_with_index do |student, index| %>
      <tr>
	<td>
	  <%= index %>
	</td>
	<td>
	  <%= student.name %>
	</td>
	<td>
	  <%= student.std %>
	</td>
	<td>
	  <%= student.group %>
	</td>
	<td>
	  <%= student.mobile %>
	</td>
	<td>
	  <%= student.p_mobile %>
	</td>
	<td>
	  <%= link_to 'Show', student_path(student) %>  | 
	  <%= link_to 'Edit', edit_student_path(student) %>
	</td>
      </tr>
    <%- end %>
  </table>
</div>

</div>
</div>
