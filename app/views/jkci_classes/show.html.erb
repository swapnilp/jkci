<div id="k-body" class="k-body adminDesk">
  <div class="container">
    <div class="col-sm-12 textLeft">
      <div class="col-sm-12 textLeft">
	<span class="col-sm-2"><h5>Name</h5></span>
	<span class="col-sm-6 paddingTop10"><%= @jkci_class.class_name %></span>
      </div>
      <div class="col-sm-12 textLeft">
	<span class="col-sm-2"><h5>Start date</h5> </span>
	<span class="col-sm-6 paddingTop10"><%= @jkci_class.class_start_time %></span>
      </div>
      <div class="col-sm-12 textLeft">
	<span class="col-sm-2"><h5>End Date</h5></span>
	<span class="col-sm-6 paddingTop10"><%= @jkci_class.class_end_time %></span>
      </div>
      <div class="col-sm-12 textLeft">
	<span class="col-sm-2"><h5>Teacher</h5></span>
	<span class="col-sm-6 paddingTop10"><%= @jkci_class.teacher.try(:name) %></span>
      </div>

      
      <div class="col-sm-12 textLeft paddingTop10">
	<%= link_to "Edit" , edit_jkci_class_path(@jkci_class), class: 'btn btn-primary btn-sm' %>
      </div>

      <div class="col-sm-12 textLeft paddingTop10">
	<%= link_to "Daily Teach",  new_daily_teach_path({jkci_class_id: @jkci_class.id}), class: 'btn btn-primary btn-sm' %>
	<%= link_to "Create Exam",  "#", onclick: "createClassExam(event, this);" , class: 'btn btn-primary btn-sm', data: {id: @jkci_class.id} %>
	<%= link_to "Assign Students",  class_assign_students_path(@jkci_class), class: 'btn btn-primary btn-sm' %>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12" style="margin-top:25px;">
	<ul class="nav nav-tabs nav-justified">
	  <li class="active">
	    <a href="#k-tab-students" data-toggle="tab">Students</a>
	  </li>
	  <li>
	    <a href="#k-tab-exams" data-toggle="tab">Exams</a>
	  </li>
	  <li>
	    <a href="#k-tab-daily_teach" data-toggle="tab">Daily Teach</a>
	  </li>
	</ul>
	<div class="tab-content">
	  <div id="k-tab-students" class="tab-pane fade active in">
	    <div class="textLeft">
	      <%- @jkci_class.students.each_with_index do |student, index| %>
	        <h4><%= index + 1 %>  :  <%= link_to student.name, student_path(student) %> 
		  <span style="font-size:12px;">(<%= "#{student.std}- #{student.group}  - #{student.mobile}" %>)</span>
		</h4>
	      <%- end %>
	    </div>
	  </div>
	  <div id="k-tab-exams" class="tab-pane fade">
	    <div class="textLeft">
	      <%- @jkci_class.jk_exams.order("id desc").each_with_index do |exam, index| %>
	        <a href="<%= exam_path(exam)%>">
		  <h4 style="font-size:14px;"><%= index + 1 %>  :  <%= exam.exam_date.to_date %> 
		    <span style="font-size:12px;">
		      (<%= "#{exam.marks}- comp:#{exam.is_completed} - Res:#{exam.is_result_decleared}" %>)
		    </span>
		  </h4>
		</a>
	      <%- end %>
	    </div>
	  </div>
	  <div id="k-tab-daily_teach" class="tab-pane fade">
	    <div class="left dailyTeachChapters alert alert-success" style="width:100%;" data-class-id="<%= @jkci_class.id %>">
	      <%- @chapters.each do |chapter| %>
	        <%= check_box_tag chapter.id, chapter.name, true, style: 'display:inline-block;margin:0;', onclick: "dailyTeachingChapterSelect(event, this);", data: {id: chapter.id} %>
		<%= chapter.name %>
	      <%- end %>
	    </div>
	    <div class="textLeft dailyTeach">
	      <%= render partial: 'daily_teaching_point', locals: {daily_teaching_points: @daily_teaching_points}%>
	    </div>
	    <div style="width:100%;" class="loadingImg center hide">
	      <img src="/assets/fancybox_loading.gif">
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
