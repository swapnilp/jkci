<div class="textLeft ">
<%= form_for [@subject, @jkci_class], html:{role: 'form', class: 'form-horizontal'} do |f| %>
  <%= f.hidden_field :subject_id %>
  <div class="form-group">
    <span class="col-sm-2 control-label">Class Name : </span>
    <div class="col-sm-4">
      <%= f.text_field :class_name %>
    </div>
  </div>

  <div class="form-group">
    <span class="col-sm-2 control-label">Batch</span>
    <div class="col-sm-4">
      <%= f.select :batch_id, options_from_collection_for_select(@batches, "id", "name", f.object.batch_id) %>
    </div>
  </div>
  
  <div class="form-group">
    <span class="col-sm-2 control-label"> Class Start Time</span>
    <div class="col-sm-4">
      <%= f.text_field :class_start_time, value:  Time.now %>
    </div>
  </div>
  <div class="form-group">
    <span class="col-sm-2 control-label">Class end Time</span>
    <div class="col-sm-4">
      <%= f.text_field :class_end_time, value: Time.now+ 6.months %>
    </div>
  </div>
  <div class="form-group">
    <span class="col-sm-2 control-label">Teacher</span>
    <div class="col-sm-4">
      <%= f.select :teacher_id, options_from_collection_for_select(@teachers, "id", "name", f.object.teacher_id), prompt: "Select something" %>
    </div>
  </div>
  
  <div class="form-group">
    <span class="col-sm-2 control-label">Subject</span>
    <div class="col-sm-4">
      <%= f.object.subject.name %>
    </div>
  </div>
  
  <div class="col-sm-offset-2 ">
    <%= f.submit 'Save', class: 'btn btn-primary btn-sm', onclick: "return confirm('Are you sure?')" %>
    <%= link_to 'Cancel', subjects_path, class: 'btn btn-warning btn-sm'%>
  </div>
<%- end %>

</div>
