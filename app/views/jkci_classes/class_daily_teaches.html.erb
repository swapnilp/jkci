<div id="k-body" class="k-body adminDesk">
  <div class="container">
    <div class="col-sm-12 textLeft">
      <h1>Daily Teach</h1>  
      
      <div class="textLeft dailyTeach">
	<%- @daily_teaching_points.each_with_index do |dtp, index| %>
	  <div>
	    <a href="<%= daily_teach_path(dtp) %>" style="display:inline-block;">
	      <h4 style="<%= 'color:red;' if dtp.class_catlogs.blank? %>"><%= index + 1 %>  :  <%= dtp.date.to_date %> 
	        <span style="font-size:12px;">(<%= "#{dtp.points}- #{dtp.absent_count}" %>)</span>
	      </h4>
	    </a>
	  </div>
	<%- end %>
      </div>
    </div>
  </div>
</div>
