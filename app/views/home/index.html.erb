<div class="col-sm-12">
  <h2>Today's Exams</h2>

  <table class="table table-hover examsTable">
    <thead>
      <tr>
	<th>#</th>
	<th>Exam Name</th>
	<th>Class</th>
	<th>Type</th>
	<th>Mark</th>
	<th>Duration</th>
	<th>Date</th>
      </tr>
    </thead>
    <%= render partial: "exam", locals:{exams: @todays_exams, type: "todays"}%>
  </table>
</div>
