<%- exams.each_with_index do |exam, index| %>
  <tr  class="<%= 'warning' if type == 'unconducted' && exam.exam_date < Date.today %>" >
    <td>
      <%= index + 1 %>
    </td>
    <td>
      <%= link_to exam.name, exam_path(exam), class: "#{ 'red' if type == 'unconducted' && exam.exam_date < Date.today}" %>
    </td>
    <td>
      <%= link_to exam.jkci_class.class_name, jkci_class_path(exam.jkci_class) %>
    </td>
    <td>
      <%= exam.exam_type %>
    </td>
    <td>
      <%= exam.marks %> 
    </td>
    <td>
      <%= exam.duration %>
    </td>
    <td>
      <%= exam.exam_date.to_date %>
    </td>
  </tr>
<%- end %>
  
